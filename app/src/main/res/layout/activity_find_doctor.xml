<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FindDoctorActivity"
    android:background="@color/light_gray">

    <TextView
        android:id="@+id/titleFindDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/select_doctor_category"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/titleFindDoctor"
        android:layout_marginLeft="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/categoriesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCategories">

        <Button
            android:id="@+id/buttonTherapist"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:text="@string/therapist"
            android:textColor="@color/black"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_therapist"
            android:drawablePadding="8dp"/>

        <Button
            android:id="@+id/buttonGeneralPractitioner"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="75dp"
            android:text="@string/general_practitioner"
            android:textColor="@color/black"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_general"
            android:drawablePadding="8dp" />

        <Button
            android:id="@+id/buttonEndocrinologist"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="9dp"
            android:text="@string/endocrinologist"
            android:textColor="@color/black"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_endocrinologist"
            android:drawablePadding="8dp"/>

        <Button
            android:id="@+id/buttonOphthalmologist"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginTop="205dp"
            android:layout_marginLeft="9dp"
            android:text="@string/ophthalmologist"
            android:textColor="@color/black"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_ophtalmologist"
            android:drawablePadding="8dp"/>

        <Button
            android:id="@+id/buttonSurgeons"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="9dp"
            android:text="@string/surgeons"
            android:textColor="@color/black"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_surgeon"
            android:drawablePadding="8dp"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/buttonMyAppointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoriesLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="@string/my_appointments"
        android:textColor="@color/black"
        android:background="@drawable/button_background"
        android:padding="16dp"/>
</RelativeLayout>