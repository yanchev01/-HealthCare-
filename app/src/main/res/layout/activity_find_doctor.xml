<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FindDoctorActivity"
    android:background="@color/light_gray">

    <TextView
        android:id="@+id/titleFindDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:text="Запись"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/select_doctor_category"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/titleFindDoctor"
        android:layout_marginLeft="10dp"/>


        <Button
            android:id="@+id/buttonTherapist"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="9dp"
            android:text="@string/therapist"
            android:textColor="@color/black"
            android:background="@drawable/button_doctor"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_doctor"
            android:drawablePadding="8dp"/>

        <Button
            android:id="@+id/buttonGeneralPractitioner"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="235dp"
            android:text="@string/general_practitioner"
            android:textColor="@color/black"
            android:background="@drawable/button_doctor"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_doctor"
            android:drawablePadding="8dp" />

        <Button
            android:id="@+id/buttonEndocrinologist"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginTop="305dp"
            android:layout_marginLeft="9dp"
            android:text="@string/endocrinologist"
            android:textColor="@color/black"
            android:background="@drawable/button_doctor"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_doctor"
            android:drawablePadding="8dp"/>

        <Button
            android:id="@+id/buttonOphthalmologist"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginTop="375dp"
            android:layout_marginLeft="9dp"
            android:text="@string/ophthalmologist"
            android:textColor="@color/black"
            android:background="@drawable/button_doctor"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_doctor"
            android:drawablePadding="8dp"/>

        <Button
            android:id="@+id/buttonSurgeons"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginTop="445dp"
            android:layout_marginLeft="9dp"
            android:text="@string/surgeons"
            android:textColor="@color/black"
            android:background="@drawable/button_doctor"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_doctor"
            android:drawablePadding="8dp"/>


    <Button
        android:id="@+id/buttonMyAppointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:text="@string/my_appointments"
        android:textColor="@color/black"
        android:background="@drawable/button_background"
        android:padding="16dp"/>
</RelativeLayout>